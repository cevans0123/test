    {
        if(count.Ideas.Count >= 0)
        { -->
        <h4>Total Number of Posts: @ViewBag.ThisUser.Ideas.Count</h4>
        <!-- }
    } -->
    <h4>Total Number of Likes: @ViewBag.ThisUser.Participants.Count</h4>
    
</div>
</body>
</html>